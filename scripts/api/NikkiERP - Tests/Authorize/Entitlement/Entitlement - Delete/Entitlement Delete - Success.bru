      expect(body).to.have.property("id").that.is.a("string");
      expect(body).to.have.property("deletedAt").that.is.a("number");
    });
  
    // âœ… XÃ³a biáº¿n mÃ´i trÆ°á»ng náº¿u xÃ³a thÃ nh cÃ´ng
    bru.deleteVar("entitlement_id");
