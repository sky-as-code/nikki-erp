meta {
  name: Action Create - Client error (Invalid fields)
  type: http
  seq: 3
}

post {
  url: {{api_host}}/v1/authorize/actions
  body: json
  auth: inherit
}

body:json {
  {
      "invalid_field": "invalid_value"
  }
}

script:post-response {
  let body;
  
  try {
    body = res.getBody();
    console.log("📥 Error response:", body);
  } catch (e) {
    expect.fail("❌ Failed to parse JSON");
  }
  
  test("Status code is 400", () => {
    expect(res.getStatus()).to.eql(400);
  });
  
  test("Validation error with invalid action fields", () => {
    expect(body).to.have.property("code", "validation_error");
    expect(body).to.have.property("details").that.is.an("object");
  
    const details = body.details;
    expect(details).to.have.property("createdBy", "cannot be blank");
    expect(details).to.have.property("name", "cannot be blank");
    expect(details).to.have.property("resourceId", "cannot be blank");
  
    console.log("✅ Validation errors matched for action fields:", details);
  });
  
}

settings {
  encodeUrl: true
}
