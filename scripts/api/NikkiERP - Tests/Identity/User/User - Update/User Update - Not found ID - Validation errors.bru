meta {
  name: User Update - Not found ID - Validation errors
  type: http
  seq: 2
}

put {
  url: {{api_host}}/v1/identity/users/not-existing-1234567890123
  body: json
  auth: inherit
}

body:json {
  {
      "etag": "{{etag}}"
  }
}

script:post-response {
  const expected = {
      code: "validation_error",
      details: {
          id: "user id not found",
      },
  };
  
  test("Status code is 400", function () {
      expect(res.getStatus()).to.equal(400);
  });
  
  test("Response body matches expected JSON exactly", function () {
      expect(res.getBody()).to.eql(expected);
  });
  
}

settings {
  encodeUrl: true
}
