meta {
  name: User List Statuses - Sort by invalid lang - Validation errors
  type: http
  seq: 3
}

get {
  url: {{api_host}}/v1/identity/users/statuses?sortbyLang=vi-V
  body: none
  auth: inherit
}

params:query {
  sortbyLang: vi-V
}

script:post-response {
  const expected = {
      code: "validation_error",
      details: {
          sortByLang: "must be a valid BCP47-compliant language code with region part",
      },
  };
  
  // Parse response body
  let jsonData;
  try {
      jsonData = res.getBody();
  } catch (e) {
      test("Response is valid JSON", function () {
          expect.fail("Response is not valid JSON");
      });
      return;
  }
  
  test("Status code is 400", function () {
      expect(res.getStatus()).to.equal(400);
  });
  
  test("Response body matches expected JSON exactly", function () {
      expect(jsonData).to.eql(expected);
  });
  
}

settings {
  encodeUrl: true
}
