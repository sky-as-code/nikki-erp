meta {
  name: User Get - Not found ID - Validation errors
  type: http
  seq: 2
}

get {
  url: {{api_host}}/v1/identity/users/not-existing-1234567890123
  body: none
  auth: inherit
}

script:post-response {
  const expected = {
      code: "validation_error",
      details: {
          id: "user not found",
      },
  };
  
  // Parse response body
  let jsonData;
  try {
      jsonData = res.getBody();
  } catch (e) {
      test("Response is valid JSON", function () {
          expect.fail("Response is not valid JSON");
      });
      return;
  }
  
  test("Status code is 400", function () {
      expect(res.getStatus()).to.equal(400);
  });
  
  test("Response body matches expected JSON exactly", function () {
      expect(jsonData).to.eql(expected);
  });
  
}

settings {
  encodeUrl: true
}
