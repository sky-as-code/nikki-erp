meta {
  name: User Search - Invalid fields - Validation errors
  type: http
  seq: 14
}

get {
  url: {{api_host}}/v1/identity/users?page=-1&size=999999999999999999&graph={"if":["fake-field", "=", "Owner"]}
  body: none
  auth: inherit
}

params:query {
  page: -1
  size: 999999999999999999
  graph: {"if":["fake-field", "=", "Owner"]}
}

script:pre-request {
  bru.deleteVar('search_schema')
}

script:post-response {
  const expected = {
      code: "validation_error",
      details: {
          "graph.condition": "invalid field 'fake-field' of entity 'user' in condition '[fake-field = Owner]'",
          page: "must be no less than 0",
          size: "must be no greater than 500",
      },
  };
  
  test("Status code is 400", function () {
      expect(res.getStatus()).to.equal(400);
  });
  
  test("Response body matches expected JSON exactly", function () {
      expect(res.getBody()).to.eql(expected);
  });
  
}

settings {
  encodeUrl: true
}
