meta {
  name: Login - Authenticate
  type: http
  seq: 2
}

post {
  url: {{api_host}}/v1/authn/login
  body: json
  auth: inherit
}

body:json {
  {
      "attemptId": "{{attemptId}}",
      "username": "{{email}}",
      "password": "{{password}}"
  }
}

script:post-response {
  const payload = res.getBody();
  const { attemptId } = payload;
  attemptId && bru.setVar('attemptId', attemptId);
  
}

settings {
  encodeUrl: true
}
